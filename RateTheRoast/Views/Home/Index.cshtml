@{
    ViewData["Title"] = "Home Page";
}


<div class="text-center">
    <h1 class="display-4">Sip it. Rate it. Remember it.</h1>
    <form class="form-inline" asp-action="Index" asp-controller="Coffees" method="get">
        <div class="col-3"></div>
        <div class="input-group mb-1 col-6">
            <div class="input-group-prepend">
                <button class="btn btn-secondary" type="submit">Find it.</button>
            </div>
            <input type="text" name="SearchString" value="@ViewData["currentFilter"]"
                   class="form-control" placeholder="Search for Roasts, Roasters, or Cities"
                   aria-label="" aria-describedby="basic-addon1">
        </div>
    </form>
</div>
<form class="form-inline">
    <div class="col-3"></div>
    <div class="col-6">
        <p class="lead">or browse roasters by <a href="http://localhost:5000/States">state</a>.</p>
    </div>
</form>
