@model IEnumerable<RateTheRoast.Models.Favorite>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coffee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Coffee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coffee.Roaster.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coffee.Origin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coffee.Region)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavoriteId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavoriteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavoriteId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
