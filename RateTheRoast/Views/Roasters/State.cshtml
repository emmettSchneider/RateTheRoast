@model IEnumerable<RateTheRoast.Models.Roaster>

@{
    ViewData["Title"] = "State";
}

<h2>Roasters</h2>

<p><a class="text-info" asp-action="Create">Add a new roaster</a></p>

@foreach (var item in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.StateAbbrev)</h6>
            <a asp-action="Details" asp-route-id="@item.RoasterId" class="card-link text-info">View coffees from @Html.DisplayFor(modelItem => item.Name)</a>
        </div>
    </div>
}