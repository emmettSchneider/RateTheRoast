@model RateTheRoast.Models.Review

@{
    ViewData["Title"] = "Edit";
}

@{ DateTime myDateTime = DateTime.Now;
string sqlFormattedDate = myDateTime.ToString("yyyy-MM-dd HH:mm:ss.fff");}

<h1>Edit</h1>

<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReviewId" value="@Model.ReviewId" />
            <input type="hidden" asp-for="CoffeeId" value="@Model.CoffeeId" />
            <input type="hidden" asp-for="UserId" value="@sqlFormattedDate" />
            <input type="hidden" asp-for="DateEdited" value="" />
            <div class="form-group">
                <label asp-for="BrewMethodId" class="control-label"></label>
                <select asp-for="BrewMethodId" class="form-control" asp-items="ViewBag.BrewMethodId"></select>
                <span asp-validation-for="BrewMethodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label"></label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                <span asp-validation-for="LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Narrative" class="control-label"></label>
                <input asp-for="Narrative" class="form-control" />
                <span asp-validation-for="Narrative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Score" class="control-label"></label>
                <input asp-for="Score" class="form-control" />
                <span asp-validation-for="Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
